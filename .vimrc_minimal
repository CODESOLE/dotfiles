language en_US.utf8
packadd! editorconfig
packadd! comment
packadd! cfilter
set noerrorbells
set novisualbell
set t_vb=
set belloff=all
set laststatus=- fillchars+=eob:\ 
set tabstop=2 shiftwidth=2 softtabstop=2 expandtab smartindent
set rnu
set bg=dark
set termguicolors
colorscheme torte
set gp=git\ grep\ -nE
set backspace=2
set shortmess-=S
set shortmess+=I noshowcmd
set signcolumn=no noshowmode
set completeopt=menuone,popup,noselect,fuzzy completepopup=highlight:Pmenu
set wildmenu
set wildmode=list,full
syntax enable
set mouse=a
set is hlsearch ignorecase smartcase showmatch
set encoding=utf-8
set nobackup nowritebackup noswapfile
set guioptions=Ac
filetype on
filetype plugin on
let mapleader=" "
noremap gl $
noremap gh 0
noremap <silent> <leader>l :cnext<CR>
noremap <silent> <leader>h :cprev<CR>
nmap gn :bn<CR>
nmap gp :bp<CR>
vnoremap <leader>p "_dP
nnoremap <silent> <C-h> :tabn<CR>
tnoremap <silent> <C-h> <C-w>:tabn<CR>
inoremap <C-k> <Up>
inoremap <C-j> <Down>
inoremap <C-h> <Left>
inoremap <C-l> <Right>
cnoremap <C-k> <Up>
cnoremap <C-j> <Down>
cnoremap <C-h> <Left>
cnoremap <C-l> <Right>
inoremap <silent> ş <Esc>
vnoremap <silent> ş <Esc>
cnoremap <silent> ş <Esc>
