{
  "struct": {
    "prefix": "str",
    "description": "struct name_s {};",
    "body": [
      "typedef struct $1 {",
      "\t$0;",
      "} $1_s;"
    ]
  },
  "union": {
    "prefix": "uni",
    "description": "union name_u {};",
    "body": [
      "typedef union $1 {",
      "\t$0;",
      "} $1_u;"
    ]
  },
  "enum": {
    "prefix": "enu",
    "description": "enum name_e {};",
    "body": [
      "typedef enum $1 {",
      "\t$0 = 0,",
      "} $1_e;"
    ]
  },
  "main": {
    "prefix": "main",
    "description": "int main(...) {}",
    "body": [
      "#include <stdio.h>",
      "",
      "int main(int argc, char *argv[]) {",
      "\t$0",
      "",
      "\treturn 0;",
      "}"
    ]
  },
  "ternary": {
    "prefix": "tern",
    "description": "ternary operator",
    "body": "${1:expression} ? ${2:first_condition} : ${3:second_condition};",
  },
  "guard": {
    "prefix": "guard",
    "description": "header guard",
    "body": [
      "#ifndef $1",
      "#define $1",
      "",
      "$0",
      "",
      "#endif /* $1 */"
    ]
  }
}
