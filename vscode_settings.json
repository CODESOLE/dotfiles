{
    "workbench.colorTheme": "GitHub Dark Default",
    "window.zoomLevel": -1,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "cmake.configureOnOpen": true,
    "workbench.iconTheme": "vscode-icons",
    "telemetry.telemetryLevel": "off",
    "editor.minimap.showSlider": "always",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.fontFamily": "'Liberation Mono', 'Source Code Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "window.dialogStyle": "custom",
    "window.titleBarStyle": "custom",
    "workbench.sideBar.location": "right",
    "clangd.checkUpdates": true,
    "vim.enableNeovim": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.neovimConfigPath": "~/.config/nvim/init.vim",
    "vim.neovimUseConfigFile": true,
    "vim.useSystemClipboard": true,
    "vim.vimrc.enable": true,
    "keyboard.dispatch": "keyCode",
    "git.confirmSync": false,
    "clangd.arguments": [
        "--header-insertion=never",
        "--all-scopes-completion",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion-decorators",
        "--background-index"
    ],
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "mesonbuild.configureOnOpen": true,
    "editor.suggest.showStatusBar": true,
    "vim.showmodename": false,
    "debug.openExplorerOnEnd": true,
    "debug.showInStatusBar": "always",
    "update.mode": "none",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "json.schemaDownload.enable": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "npm.fetchOnlinePackageInfo": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "editor.rulers": [
        80
    ],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#00000099"
    },
    "editor.minimap.maxColumn": 80,
    "vim.sneak": true,
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "update.showReleaseNotes": false,
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },
    "editor.bracketPairColorization.enabled": true,
    "clang-tidy.checks": [
        "-*",
        "clang-analyzer-*",
        "clang-analyzer-cplusplus*",
        "performance-*",
        "portability-*"
    ],
    "editor.guides.bracketPairs": true,
    "editor.formatOnSave": true,
    "c-cpp-flylint.clang.pedantic": true,
    "c-cpp-flylint.clang.standard": [
        "c99",
        "c++20"
    ],
    "c-cpp-flylint.flawfinder.enable": false,
    "c-cpp-flylint.flexelint.enable": false,
    "c-cpp-flylint.lizard.enable": false,
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.useGitUserName": true,
    "doxdocgen.generic.dateFormat": "",
    "doxdocgen.generic.authorTag": "@author {author}",
    "todo-tree.general.statusBar": "total",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "@TODO",
        "@FIXME",
        "@@@"
    ],
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "workbench.layoutControl.enabled": true,
    "todo-tree.general.rootFolder": "${workspaceFolder}/src",
    "ShortcutMenuBar.beautify": false,
    "ShortcutMenuBar.navigateBack": false,
    "ShortcutMenuBar.navigateForward": false,
    "ShortcutMenuBar.openFilesList": false,
    "ShortcutMenuBar.startDebugging": true,
    "ShortcutMenuBar.toggleRenderWhitespace": true,
    "editor.renderWhitespace": "none",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "git.autofetch": true,
    "git.mergeEditor": true,
    "window.commandCenter": true,
    "workbench.activityBar.visible": false,
}
