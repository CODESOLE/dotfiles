{
    "workbench.colorTheme": "GitHub Dark Default",
    "editor.fontSize": 13,
    "window.zoomLevel": -1,
    "explorer.confirmDelete": false,
    "cmake.configureOnOpen": true,
    "workbench.iconTheme": "material-icon-theme",
    "telemetry.telemetryLevel": "off",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.fontFamily": "'Liberation Mono', 'Source Code Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "window.dialogStyle": "custom",
    "window.titleBarStyle": "custom",
    "workbench.sideBar.location": "right",
    "clangd.checkUpdates": true,
    "material-icon-theme.showUpdateMessage": true,
    "vim.enableNeovim": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.neovimConfigPath": "~/.config/nvim/init.vim",
    "vim.neovimUseConfigFile": true,
    "vim.useSystemClipboard": true,
    "vim.vimrc.enable": true,
    "keyboard.dispatch": "keyCode",
    "git.confirmSync": false,
    "clangd.arguments": ["--header-insertion=never", "--background-index"],
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "mesonbuild.configureOnOpen": true,
    "editor.suggest.showStatusBar": true,
    "problems.showCurrentInStatus": true,
    "vim.showmodename": false,
    "debug.openExplorerOnEnd": true,
    "debug.showInStatusBar": "always",
    "git-graph.showStatusBarItem": false,
    "workbench.activityBar.visible": false,
    "update.mode": "none",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "json.schemaDownload.enable": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "npm.fetchOnlinePackageInfo": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "editor.rulers": [80],
    "workbench.colorCustomizations": { "editorRuler.foreground": "#00000099" },
    "editor.minimap.maxColumn": 80,
    "vim.sneak": true,
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "update.showReleaseNotes": false,
    "task.problemMatchers.neverPrompt": { "shell": true },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "MSYS2Bash": {
            "path": "C:\\msys64\\usr\\bin\\bash.exe",
            "args": ["--login", "-i"],
            "env": {
                "MSYSTEM": "MINGW64",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            }
        }
    },
    "terminal.integrated.defaultProfile.windows": "MSYS2Bash",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true
}
