{
    "workbench.colorTheme": "GitHub Dark Default",
    "window.zoomLevel": -1,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "cmake.configureOnOpen": true,
    "workbench.iconTheme": "material-icon-theme",
    "telemetry.telemetryLevel": "off",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.fontFamily": "'Liberation Mono', 'Source Code Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "window.dialogStyle": "custom",
    "window.titleBarStyle": "custom",
    "workbench.sideBar.location": "right",
    "clangd.checkUpdates": true,
    "material-icon-theme.showUpdateMessage": true,
    "vim.enableNeovim": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.neovimConfigPath": "~/.config/nvim/init.vim",
    "vim.neovimUseConfigFile": true,
    "vim.useSystemClipboard": true,
    "vim.vimrc.enable": true,
    "keyboard.dispatch": "keyCode",
    "git.confirmSync": false,
    "clangd.arguments": ["--header-insertion=never", "--background-index"],
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "mesonbuild.configureOnOpen": true,
    "editor.suggest.showStatusBar": true,
    "problems.showCurrentInStatus": true,
    "vim.showmodename": false,
    "debug.openExplorerOnEnd": true,
    "debug.showInStatusBar": "always",
    "git-graph.showStatusBarItem": false,
    "workbench.activityBar.visible": false,
    "update.mode": "none",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "json.schemaDownload.enable": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "npm.fetchOnlinePackageInfo": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "editor.rulers": [80],
    "workbench.colorCustomizations": { "editorRuler.foreground": "#00000099" },
    "editor.minimap.maxColumn": 80,
    "vim.sneak": true,
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "update.showReleaseNotes": false,
    "task.problemMatchers.neverPrompt": { "shell": true },
    "editor.bracketPairColorization.enabled": true,
    "clang-tidy.checks": [
        "-*",
        "clang-analyzer-*",
        "-clang-analyzer-cplusplus*",
        "performance-*",
        "portability-*"
    ],
    "editor.guides.bracketPairs": true,
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "editor.formatOnSave": true,
    "c-cpp-flylint.clang.pedantic": true,
    "c-cpp-flylint.language": "c",
    "c-cpp-flylint.clang.standard": [
        "c99"
    ],
    "c-cpp-flylint.flawfinder.enable": false,
    "c-cpp-flylint.flexelint.enable": false,
    "c-cpp-flylint.lizard.enable": false,
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.useGitUserName": true,
    "doxdocgen.file.versionTag": "",
    "doxdocgen.file.customTag": [
        "This program is free software: you can redistribute it and/or modify",
        "it under the terms of the GNU General Public License as published by",
        "the Free Software Foundation, either version 3 of the License, or",
        "(at your option) any later version.",
        "",
        "This program is distributed in the hope that it will be useful,",
        "but WITHOUT ANY WARRANTY; without even the implied warranty of",
        "MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the",
        "GNU General Public License for more details.",
        "",
        "You should have received a copy of the GNU General Public License",
        "along with this program.  If not, see <http://www.gnu.org/licenses/>.",
        "",
        "SPDX-License-Identifier: GPL-3.0-or-later",
        ""
    ],
    "doxdocgen.file.fileOrder": [
        "file",
        "brief",
        "author",
        "copyright",
        "empty",
        "custom"
    ],
    "doxdocgen.generic.dateFormat": "",
    "doxdocgen.generic.authorTag": "@author {author}",
    "todo-tree.general.statusBar": "total",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "@TODO",
        "@FIXME",
        "@@@"
    ],
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "workbench.layoutControl.enabled": true,
    "todo-tree.general.rootFolder": "${workspaceFolder}/src",
    "ShortcutMenuBar.beautify": false,
    "ShortcutMenuBar.navigateBack": false,
    "ShortcutMenuBar.navigateForward": false,
    "ShortcutMenuBar.openFilesList": false,
    "ShortcutMenuBar.startDebugging": true,
    "workbench.activityBar.visible": false,
    "ShortcutMenuBar.toggleRenderWhitespace": true,
}
